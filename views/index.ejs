<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant</title>
</head>
<body>
    <nav>
        <a href="foods/new">Add a item </a>
      </nav>
      <h1>index page</h1>
  
      <div>
        <% foods.forEach(food => { %>
        <div>
          <p><%=food.name %></p>
          <p><%=food.description %></p>
          <div>
            <a href="foods/<%= food._id %>"
              ><img src="<%= food.img %>" alt="" style="width: 200px; height: 200px; object-fit: scale-down" /></a>
            
            <p><span>$</span><%= food.price %></p>
          </div>
          <form action="/foods/<%= food.id %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
          <a href="/foods/<%=food._id %>/edit">Edit</a>
        </div>
        <% }) %>
      </div>
  </body>
</html>
       